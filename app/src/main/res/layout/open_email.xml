<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4285F4"
    android:orientation="vertical">

    <!-- Header Section dengan Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="40dp"
        android:paddingEnd="32dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:padding="8dp"
            android:src="@drawable/back_arrow" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvCheckEmailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Check Your Email"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="We have sent a password recover\ninstructions to your email."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="30dp"/>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Container putih di bagian bawah -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_background"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="55dp"
        android:paddingEnd="32dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal">

        <!-- Email Icon dengan Background Biru -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/back_email_icon"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivEmailIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/email_icon" />
        </LinearLayout>

        <!-- Tombol Open email app -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@null"
            android:fontFamily="sans-serif-medium"
            android:text="Open email app"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Skip text -->
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:text="Skip, i'll confirm later"
            android:textColor="#4285F4"
            android:textSize="16sp" />

        <!-- Help text -->
        <TextView
            android:id="@+id/tvHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="#4285F4"
            android:textSize="14sp"
            android:text="Did not receive the email ? check your spam">
        </TextView>

        <TextView
            android:id="@+id/tvTryAnother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="try another email address"
            android:textColor="#4285F4"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>